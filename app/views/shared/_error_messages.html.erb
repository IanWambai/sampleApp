<% if object.errors.any? %>
	<div id = "error_explanation">
		<h2>
			<%= pluralize(object.errors.count, "evil") %>
			stopped you from your mission, adventurer:
		</h2>
		<p>The <%= object.class.to_s.underscore.humanize.downcase %> concerned:</p>
		<ul>
		<% object.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		<% end %>
		</ul>
	</div>
<% end %>